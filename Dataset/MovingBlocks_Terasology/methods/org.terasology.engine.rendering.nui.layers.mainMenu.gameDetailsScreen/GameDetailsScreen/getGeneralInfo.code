private String getGeneralInfo(final GameInfo theGameInfo){
  GameManifest manifest=theGameInfo.getManifest();
  return translationSystem.translate("${engine:menu#game-details-game-title} ") + manifest.getTitle() + '\n'+ '\n'+ translationSystem.translate("${engine:menu#game-details-last-play}: ")+ DATE_FORMAT.format(theGameInfo.getTimestamp())+ '\n'+ '\n'+ translationSystem.translate("${engine:menu#game-details-game-duration} ")+ DateTimeHelper.getDeltaBetweenTimestamps(new Date(0).getTime(),manifest.getTime())+ '\n'+ '\n'+ translationSystem.translate("${engine:menu#game-details-game-seed} ")+ manifest.getSeed()+ '\n'+ '\n'+ translationSystem.translate("${engine:menu#game-details-world-generator}: ")+ '\t'+ manifest.mainWorldDisplayName(worldGeneratorManager);
}
