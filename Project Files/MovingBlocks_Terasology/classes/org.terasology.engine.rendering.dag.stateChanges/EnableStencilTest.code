/** 
 * Enables OpenGL's stencil testing. This can potentially be used in a variety of advanced computer graphics tricks such as stenciled shadows.
 */
public final class EnableStencilTest extends EnableStateParameter {
  private static StateChange defaultInstance=new DisableStencilTest();
  /** 
 * The constructor, to be used in the initialise method of a node. Sample use: addDesiredStateChange(new EnableStencilTest());
 */
  public EnableStencilTest(){
    super(GL_STENCIL_TEST);
  }
  @Override public StateChange getDefaultInstance(){
    return defaultInstance;
  }
private static final class DisableStencilTest extends DisableStateParameter {
    DisableStencilTest(){
      super(GL_STENCIL_TEST);
    }
    @Override public StateChange getDefaultInstance(){
      return this;
    }
  }
}
