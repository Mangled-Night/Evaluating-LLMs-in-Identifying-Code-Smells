public static final int getLength(long length){
  if (length < 0) {
    return 9;
  }
 else   if (length < 251) {
    return 1;
  }
 else   if (length < 0x10000L) {
    return 3;
  }
 else   if (length < 0x1000000L) {
    return 4;
  }
 else {
    return 9;
  }
}
public static final int getLength(byte[] src){
  int length=src.length;
  if (length < 251) {
    return 1 + length;
  }
 else   if (length < 0x10000L) {
    return 3 + length;
  }
 else   if (length < 0x1000000L) {
    return 4 + length;
  }
 else {
    return 9 + length;
  }
}
