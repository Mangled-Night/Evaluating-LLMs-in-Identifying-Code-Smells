/** 
 * Return the domain address. <p>Must hold  {@code <uses-permission android:name="android.permission.INTERNET" />}</p>
 * @param domain The name of domain.
 * @return the domain address
 */
@RequiresPermission(INTERNET) public static String getDomainAddress(final String domain){
  InetAddress inetAddress;
  try {
    inetAddress=InetAddress.getByName(domain);
    return inetAddress.getHostAddress();
  }
 catch (  UnknownHostException e) {
    e.printStackTrace();
    return "";
  }
}
