@Test public void testUpdates(){
  Animation ani=once();
  ani.update(2.5f);
  assertEquals(0f,c.value,0f);
  ani.start();
  ani.update(0.5f);
  assertEquals(0.25f,c.value,EPS);
  ani.pause();
  ani.update(0.5f);
  assertEquals(0.25f,c.value,EPS);
  ani.resume();
  ani.update(1.0f);
  assertEquals(0.75f,c.value,EPS);
  ani.update(1.0f);
  assertEquals(1.00f,c.value,0f);
  ani.update(1.0f);
  assertEquals(1.00f,c.value,0f);
}
