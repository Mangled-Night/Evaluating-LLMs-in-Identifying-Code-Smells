/** 
 * The SmackTestSuite takes care of initializing Smack for the unit tests. For example the Base64 encoder is configured.
 */
public class SmackTestSuite {
static {
    Smack.ensureInitialized();
    org.jivesoftware.smack.util.stringencoder.Base64.setEncoder(new Encoder(){
      @Override public byte[] decode(      String string){
        return Base64.getDecoder().decode(string);
      }
      @Override public String encodeToString(      byte[] input){
        return Base64.getEncoder().encodeToString(input);
      }
      @Override public String encodeToStringWithoutPadding(      byte[] input){
        return Base64.getEncoder().withoutPadding().encodeToString(input);
      }
      @Override public byte[] encode(      byte[] input){
        return Base64.getEncoder().encode(input);
      }
    }
);
    Security.addProvider(new BouncyCastleProvider());
  }
}
