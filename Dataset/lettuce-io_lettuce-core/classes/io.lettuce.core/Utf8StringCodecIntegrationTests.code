@ExtendWith(LettuceExtension.class) class Utf8StringCodecIntegrationTests extends TestSupport {
  @Test @Inject void decodeHugeBuffer(  StatefulRedisConnection<String,String> connection){
    RedisCommands<String,String> redis=connection.sync();
    char[] huge=new char[8192];
    Arrays.fill(huge,'A');
    String value=new String(huge);
    redis.set(key,value);
    assertThat(redis.get(key)).isEqualTo(value);
  }
}
