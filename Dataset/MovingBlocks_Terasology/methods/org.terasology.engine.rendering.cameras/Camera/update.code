public void update(float delta){
  double diff=Math.abs(activeFov - targetFov);
  if (diff < 1.0) {
    activeFov=targetFov;
    return;
  }
  if (activeFov < targetFov) {
    activeFov+=50.0f * delta;
    if (activeFov >= targetFov) {
      activeFov=targetFov;
    }
  }
 else   if (activeFov > targetFov) {
    activeFov-=50.0f * delta;
    if (activeFov <= targetFov) {
      activeFov=targetFov;
    }
  }
}
