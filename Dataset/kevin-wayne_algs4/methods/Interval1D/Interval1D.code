/** 
 * Initializes a closed interval [min, max].
 * @param min the smaller endpoint
 * @param max the larger endpoint
 * @throws IllegalArgumentException if the min endpoint is greater than the max endpoint
 * @throws IllegalArgumentException if either {@code min} or {@code max}is  {@code Double.NaN},  {@code Double.POSITIVE_INFINITY} or{@code Double.NEGATIVE_INFINITY}
 */
public Interval1D(double min,double max){
  if (Double.isInfinite(min) || Double.isInfinite(max))   throw new IllegalArgumentException("Endpoints must be finite");
  if (Double.isNaN(min) || Double.isNaN(max))   throw new IllegalArgumentException("Endpoints cannot be NaN");
  if (min == 0.0)   min=0.0;
  if (max == 0.0)   max=0.0;
  if (min <= max) {
    this.min=min;
    this.max=max;
  }
 else   throw new IllegalArgumentException("Illegal interval");
}
