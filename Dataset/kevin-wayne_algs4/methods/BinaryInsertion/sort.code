/** 
 * Rearranges the array in ascending order, using the natural order.
 * @param a the array to be sorted
 */
public static void sort(Comparable[] a){
  int n=a.length;
  for (int i=1; i < n; i++) {
    Comparable v=a[i];
    int lo=0, hi=i;
    while (lo < hi) {
      int mid=lo + (hi - lo) / 2;
      if (less(v,a[mid]))       hi=mid;
 else       lo=mid + 1;
    }
    for (int j=i; j > lo; --j)     a[j]=a[j - 1];
    a[lo]=v;
  }
  assert isSorted(a);
}
