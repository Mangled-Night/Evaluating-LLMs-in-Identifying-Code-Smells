public static int isHintSql(String sql){
  int j=0;
  int len=sql.length();
  if (sql.charAt(j++) == '/' && sql.charAt(j++) == '*') {
    char c=sql.charAt(j);
    while (j < len && c != '!' && c != '#' && (c == ' ' || c == '*')) {
      c=sql.charAt(++j);
    }
    if (sql.charAt(j) == 'm') {
      j--;
    }
    if (j + 6 >= len) {
      return -1;
    }
    if (sql.charAt(++j) == 'm' && sql.charAt(++j) == 'y' && sql.charAt(++j) == 'c' && sql.charAt(++j) == 'a' && sql.charAt(++j) == 't' && (sql.charAt(++j) == ':' || sql.charAt(j) == '#' || sql.charAt(j) == '-')) {
      return j + 1;
    }
  }
  return -1;
}
