private void sort(int lo,int hi,int d){
  if (hi <= lo + CUTOFF) {
    insertion(lo,hi,d);
    return;
  }
  int lt=lo, gt=hi;
  char v=text[index[lo] + d];
  int i=lo + 1;
  while (i <= gt) {
    char t=text[index[i] + d];
    if (t < v)     exch(lt++,i++);
 else     if (t > v)     exch(i,gt--);
 else     i++;
  }
  sort(lo,lt - 1,d);
  if (v > 0)   sort(lt,gt,d + 1);
  sort(gt + 1,hi,d);
}
