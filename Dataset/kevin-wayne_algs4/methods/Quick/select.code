/** 
 * Rearranges the array so that  {@code a[k]} contains the kth smallest key;{@code a[0]} through {@code a[k-1]} are less than (or equal to) {@code a[k]}; and {@code a[k+1]} through {@code a[n-1]} are greater than (or equal to) {@code a[k]}.
 * @param a the array
 * @param k the rank of the key
 * @return the key of rank {@code k}
 * @throws IllegalArgumentException unless {@code 0 <= k < a.length}
 */
public static Comparable select(Comparable[] a,int k){
  if (k < 0 || k >= a.length) {
    throw new IllegalArgumentException("index is not between 0 and " + a.length + ": "+ k);
  }
  StdRandom.shuffle(a);
  int lo=0, hi=a.length - 1;
  while (hi > lo) {
    int i=partition(a,lo,hi);
    if (i > k)     hi=i - 1;
 else     if (i < k)     lo=i + 1;
 else     return a[i];
  }
  return a[lo];
}
