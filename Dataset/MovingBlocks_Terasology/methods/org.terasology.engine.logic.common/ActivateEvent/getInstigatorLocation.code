public Vector3f getInstigatorLocation(){
  LocationComponent loc=instigator.getComponent(LocationComponent.class);
  if (loc != null) {
    Vector3f result=loc.getWorldPosition(new Vector3f());
    if (result.isFinite()) {
      return result;
    }
    result.set(0,0,0);
    return result;
  }
  return new Vector3f();
}
