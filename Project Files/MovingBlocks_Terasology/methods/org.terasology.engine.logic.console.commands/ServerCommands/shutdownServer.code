@Command(shortDescription="Shutdown the server",runOnServer=true,requiredPermission=PermissionManager.SERVER_MANAGEMENT_PERMISSION) public String shutdownServer(@Sender EntityRef sender){
  EntityRef clientInfo=sender.getComponent(ClientComponent.class).clientInfo;
  DisplayNameComponent name=clientInfo.getComponent(DisplayNameComponent.class);
  logger.info("Shutdown triggered by {}",name.name);
  gameEngine.shutdown();
  return "Server shutdown triggered";
}
