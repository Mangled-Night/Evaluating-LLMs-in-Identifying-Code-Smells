/** 
 * Return the server address by wifi.
 * @return the server address by wifi
 */
@RequiresPermission(ACCESS_WIFI_STATE) public static String getServerAddressByWifi(){
  @SuppressLint("WifiManagerLeak") WifiManager wm=(WifiManager)Utils.getApp().getSystemService(Context.WIFI_SERVICE);
  if (wm == null)   return "";
  return Formatter.formatIpAddress(wm.getDhcpInfo().serverAddress);
}
