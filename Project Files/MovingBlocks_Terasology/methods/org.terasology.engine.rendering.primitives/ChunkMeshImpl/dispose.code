/** 
 * Disposes of all the data stored in an instance of this class and the associated data stored in the GLBufferPool instance provided on construction.
 */
@Override public void dispose(){
  if (!disposed) {
    for (int i=0; i < vertexBuffers.length; i++) {
      int id=vertexBuffers[i];
      if (id != 0) {
        GL30.glDeleteBuffers(id);
        vertexBuffers[i]=0;
      }
      id=idxBuffers[i];
      if (id != 0) {
        GL30.glDeleteBuffers(id);
        idxBuffers[i]=0;
      }
      id=vaoCount[i];
      if (id != 0) {
        GL30.glDeleteVertexArrays(id);
        vaoCount[i]=0;
      }
    }
    disposed=true;
  }
}
