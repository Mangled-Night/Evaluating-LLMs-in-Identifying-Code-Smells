/** 
 * Plots the points (0, <em>a</em><sub>0</sub>), (1, <em>a</em><sub>1</sub>), ..., (<em>n</em>-1, <em>a</em><sub><em>n</em>-1</sub>) to standard draw.
 * @param a the array of values
 */
public static void plotPoints(double[] a){
  validateNotNull(a);
  int n=a.length;
  StdDraw.setXscale(-1,n);
  StdDraw.setPenRadius(1.0 / (3.0 * n));
  for (int i=0; i < n; i++) {
    StdDraw.point(i,a[i]);
  }
}
