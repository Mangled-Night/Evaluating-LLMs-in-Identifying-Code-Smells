private boolean isBalanced(){
  int black=0;
  Node x=root;
  while (x != null) {
    if (!isRed(x))     black++;
    x=x.left;
  }
  return isBalanced(root,black);
}
private boolean isBalanced(Node x,int black){
  if (x == null)   return black == 0;
  if (!isRed(x))   black--;
  return isBalanced(x.left,black) && isBalanced(x.right,black);
}
