@RegisterSystem(RegisterMode.CLIENT) public class WorldtimeResyncSystem extends BaseComponentSystem {
  @In private WorldProvider world;
  @ReceiveEvent(components=ClientComponent.class) public void resyncWorldTime(  WorldtimeResyncEvent event,  EntityRef entity){
    ClientComponent client=entity.getComponent(ClientComponent.class);
    if (client.local) {
      world.getTime().setDays(event.days);
    }
  }
}
