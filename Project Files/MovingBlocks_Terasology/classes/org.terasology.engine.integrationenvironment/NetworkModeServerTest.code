@IntegrationEnvironment(networkMode=NetworkMode.LISTEN_SERVER) public class NetworkModeServerTest {
  @Test void testNetworkMode(  NetworkSystem network){
    assertThat(network.getMode()).isEqualTo(NetworkMode.LISTEN_SERVER);
  }
  @Test void testServerHasNoPlayers(  NetworkSystem network,  LocalPlayer player){
    assertThat(network.getPlayers()).isEmpty();
    assertThat(player.isValid()).isFalse();
  }
}
