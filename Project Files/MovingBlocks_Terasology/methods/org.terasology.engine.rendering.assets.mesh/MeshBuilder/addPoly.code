/** 
 * @param v1
 * @param v2
 * @param v3
 * @param vn
 * @return
 */
public MeshBuilder addPoly(Vector3fc v1,Vector3fc v2,Vector3fc v3,Vector3fc... vn){
  for (int i=0; i < vn.length + 1; i++) {
    addIndices(vertexCount,vertexCount + i + 2,vertexCount + i + 1);
  }
  addVertex(v1);
  addVertex(v2);
  addVertex(v3);
  for (  Vector3fc v : vn) {
    addVertex(v);
  }
  return this;
}
