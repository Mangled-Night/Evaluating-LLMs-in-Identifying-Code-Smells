/** 
 * Initializes a suffix array for the given  {@code text} string.
 * @param text the input string
 */
public SuffixArrayX(String text){
  n=text.length();
  text=text + '\0';
  this.text=text.toCharArray();
  this.index=new int[n];
  for (int i=0; i < n; i++)   index[i]=i;
  sort(0,n - 1,0);
}
