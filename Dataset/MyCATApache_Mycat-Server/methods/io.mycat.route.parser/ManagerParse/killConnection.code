private static int killConnection(String stmt,int offset){
  if (stmt.length() > offset + "@CONNECTION ".length()) {
    char c1=stmt.charAt(++offset);
    char c2=stmt.charAt(++offset);
    char c3=stmt.charAt(++offset);
    char c4=stmt.charAt(++offset);
    char c5=stmt.charAt(++offset);
    char c6=stmt.charAt(++offset);
    char c7=stmt.charAt(++offset);
    char c8=stmt.charAt(++offset);
    char c9=stmt.charAt(++offset);
    char c10=stmt.charAt(++offset);
    char c11=stmt.charAt(++offset);
    char c12=stmt.charAt(++offset);
    if ((c1 == '@') && (c2 == 'C' || c2 == 'c') && (c3 == 'O' || c3 == 'o')&& (c4 == 'N' || c4 == 'n')&& (c5 == 'N' || c5 == 'n')&& (c6 == 'E' || c6 == 'e')&& (c7 == 'C' || c7 == 'c')&& (c8 == 'T' || c8 == 't')&& (c9 == 'I' || c9 == 'i')&& (c10 == 'O' || c10 == 'o')&& (c11 == 'N' || c11 == 'n')&& (c12 == ' ' || c12 == '\t' || c12 == '\r' || c12 == '\n')) {
      while (stmt.length() > ++offset) {
switch (stmt.charAt(offset)) {
case ' ':
case '\t':
case '\r':
case '\n':
          continue;
default :
        return (offset << 8) | KILL_CONN;
    }
  }
}
}
return OTHER;
}
