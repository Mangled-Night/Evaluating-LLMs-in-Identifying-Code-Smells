/** 
 * Determines an optimal solution to the two-sum zero-sum game with the specified payoff matrix.
 * @param payoff the <em>m</em>-by-<em>n</em> payoff matrix
 */
public TwoPersonZeroSumGame(double[][] payoff){
  m=payoff.length;
  n=payoff[0].length;
  double[] c=new double[n];
  double[] b=new double[m];
  double[][] A=new double[m][n];
  for (int i=0; i < m; i++)   b[i]=1.0;
  for (int j=0; j < n; j++)   c[j]=1.0;
  constant=Double.POSITIVE_INFINITY;
  for (int i=0; i < m; i++)   for (int j=0; j < n; j++)   if (payoff[i][j] < constant)   constant=payoff[i][j];
  if (constant <= 0)   constant=-constant + 1;
 else   constant=0;
  for (int i=0; i < m; i++)   for (int j=0; j < n; j++)   A[i][j]=payoff[i][j] + constant;
  lp=new LinearProgramming(A,b,c);
  assert certifySolution(payoff);
}
