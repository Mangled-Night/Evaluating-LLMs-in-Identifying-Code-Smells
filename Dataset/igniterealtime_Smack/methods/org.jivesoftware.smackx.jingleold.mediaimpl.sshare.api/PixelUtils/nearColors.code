public static boolean nearColors(int rgb1,int rgb2,int tolerance){
  int r1=(rgb1 >> 16) & 0xff;
  int g1=(rgb1 >> 8) & 0xff;
  int b1=rgb1 & 0xff;
  int r2=(rgb2 >> 16) & 0xff;
  int g2=(rgb2 >> 8) & 0xff;
  int b2=rgb2 & 0xff;
  return Math.abs(r1 - r2) <= tolerance && Math.abs(g1 - g2) <= tolerance && Math.abs(b1 - b2) <= tolerance;
}
