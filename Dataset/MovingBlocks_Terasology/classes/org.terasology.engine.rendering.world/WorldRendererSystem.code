@RegisterSystem(RegisterMode.CLIENT) public class WorldRendererSystem extends BaseComponentSystem {
  @In private WorldRenderer worldRenderer;
  @ReceiveEvent(components=WorldComponent.class) public void onChunkLoaded(  OnChunkLoaded chunkLoaded,  EntityRef entity){
    worldRenderer.onChunkLoaded(chunkLoaded.getChunkPos());
  }
  @ReceiveEvent(components=WorldComponent.class) public void onChunkUnloaded(  BeforeChunkUnload chunkUnloaded,  EntityRef entity){
    worldRenderer.onChunkUnloaded(chunkUnloaded.getChunkPos());
  }
}
