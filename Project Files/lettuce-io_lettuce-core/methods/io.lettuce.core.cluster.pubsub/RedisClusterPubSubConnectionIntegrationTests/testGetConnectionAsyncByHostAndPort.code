@Test void testGetConnectionAsyncByHostAndPort(){
  RedisClusterNode partition=pubSubConnection.getPartitions().getPartition(0);
  RedisURI uri=partition.getUri();
  StatefulRedisPubSubConnection<String,String> node=TestFutures.getOrTimeout(pubSubConnection.getConnectionAsync(uri.getHost(),uri.getPort()));
  assertThat(node.sync().ping()).isEqualTo("PONG");
}
