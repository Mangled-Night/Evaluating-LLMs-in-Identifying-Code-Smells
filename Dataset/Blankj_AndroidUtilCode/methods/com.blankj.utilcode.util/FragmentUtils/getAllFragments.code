/** 
 * Return all fragments in manager.
 * @param fm The manager of fragment.
 * @return all fragments in manager
 */
public static List<FragmentNode> getAllFragments(@NonNull final FragmentManager fm){
  return getAllFragments(fm,new ArrayList<FragmentNode>());
}
private static List<FragmentNode> getAllFragments(@NonNull final FragmentManager fm,final List<FragmentNode> result){
  List<Fragment> fragments=getFragments(fm);
  for (int i=fragments.size() - 1; i >= 0; --i) {
    Fragment fragment=fragments.get(i);
    if (fragment != null) {
      result.add(new FragmentNode(fragment,getAllFragments(fragment.getChildFragmentManager(),new ArrayList<FragmentNode>())));
    }
  }
  return result;
}
