private boolean check(){
  if (n < 0) {
    return false;
  }
  if (n == 0) {
    if (first != null)     return false;
  }
 else   if (n == 1) {
    if (first == null)     return false;
    if (first.next != null)     return false;
  }
 else {
    if (first == null)     return false;
    if (first.next == null)     return false;
  }
  int numberOfNodes=0;
  for (Node x=first; x != null && numberOfNodes <= n; x=x.next) {
    numberOfNodes++;
  }
  if (numberOfNodes != n)   return false;
  return true;
}
