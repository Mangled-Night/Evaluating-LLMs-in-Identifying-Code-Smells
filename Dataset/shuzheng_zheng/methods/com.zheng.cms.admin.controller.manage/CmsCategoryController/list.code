@ApiOperation(value="类目列表") @RequiresPermissions("cms:category:read") @RequestMapping(value="/list",method=RequestMethod.GET) @ResponseBody public Object list(@RequestParam(required=false,defaultValue="0",value="offset") int offset,@RequestParam(required=false,defaultValue="10",value="limit") int limit,@RequestParam(required=false,value="sort") String sort,@RequestParam(required=false,value="order") String order){
  CmsCategoryExample cmsCategoryExample=new CmsCategoryExample();
  if (!StringUtils.isBlank(sort) && !StringUtils.isBlank(order)) {
    cmsCategoryExample.setOrderByClause(sort + " " + order);
  }
  List<CmsCategory> rows=cmsCategoryService.selectByExampleForOffsetPage(cmsCategoryExample,offset,limit);
  long total=cmsCategoryService.countByExample(cmsCategoryExample);
  Map<String,Object> result=new HashMap<>(2);
  result.put("rows",rows);
  result.put("total",total);
  return result;
}
