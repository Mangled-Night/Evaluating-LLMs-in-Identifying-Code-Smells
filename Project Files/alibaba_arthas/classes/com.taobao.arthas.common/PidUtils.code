public class PidUtils {
  private static String PID="-1";
  private static long pid=-1;
  private static String MAIN_CLASS="";
static {
    try {
      String jvmName=ManagementFactory.getRuntimeMXBean().getName();
      int index=jvmName.indexOf('@');
      if (index > 0) {
        PID=Long.toString(Long.parseLong(jvmName.substring(0,index)));
        pid=Long.parseLong(PID);
      }
    }
 catch (    Throwable e) {
    }
    try {
      for (      final Map.Entry<String,String> entry : System.getenv().entrySet()) {
        if (entry.getKey().startsWith("JAVA_MAIN_CLASS"))         MAIN_CLASS=entry.getValue();
      }
    }
 catch (    Throwable e) {
    }
  }
  private PidUtils(){
  }
  public static String currentPid(){
    return PID;
  }
  public static long currentLongPid(){
    return pid;
  }
  public static String mainClass(){
    return MAIN_CLASS;
  }
}
