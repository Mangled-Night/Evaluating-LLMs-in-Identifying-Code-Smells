@Override protected void onCreateLayoutParams(){
  super.onCreateLayoutParams();
  mLayoutParams.height=WindowManager.LayoutParams.WRAP_CONTENT;
  mLayoutParams.width=WindowManager.LayoutParams.WRAP_CONTENT;
  mLayoutParams.windowAnimations=android.R.style.Animation_Toast;
  mLayoutParams.flags=WindowManager.LayoutParams.FLAG_KEEP_SCREEN_ON | WindowManager.LayoutParams.FLAG_NOT_FOCUSABLE | WindowManager.LayoutParams.FLAG_NOT_TOUCHABLE;
  mLayoutParams.gravity=Gravity.CENTER_HORIZONTAL | Gravity.BOTTOM;
  mLayoutParams.y=SizeUtils.dp2px(64);
}
