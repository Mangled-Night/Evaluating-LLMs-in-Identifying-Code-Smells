private LeafNode getOrCreateLeafNodeProsodyWorkaround(final String id) throws XMPPErrorException, NoResponseException, NotConnectedException, InterruptedException, NotALeafNodeException {
  try {
    return createNode(id);
  }
 catch (  XMPPErrorException e1) {
    if (e1.getStanzaError().getCondition() == Condition.conflict) {
      return getLeafNodeProsodyWorkaround(id);
    }
    throw e1;
  }
}
