/** 
 * Basic world view that provides access to the standard lighting in the world. Simply delegates to getting the value from the provided chunk
 */
public class LightWorldView extends AbstractFullWorldView {
  public LightWorldView(  ChunkProvider chunkProvider){
    super(chunkProvider);
  }
  @Override protected byte getValueAt(  Chunk chunk,  Vector3ic pos){
    return chunk.getLight(pos);
  }
  @Override protected void setValueAt(  Chunk chunk,  Vector3ic pos,  byte value){
    chunk.setLight(pos,value);
  }
}
