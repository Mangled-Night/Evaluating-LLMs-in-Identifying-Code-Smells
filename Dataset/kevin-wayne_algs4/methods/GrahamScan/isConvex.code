private boolean isConvex(){
  int n=hull.size();
  if (n <= 2)   return true;
  Point2D[] points=new Point2D[n];
  int k=0;
  for (  Point2D p : hull()) {
    points[k++]=p;
  }
  for (int i=0; i < n; i++) {
    if (Point2D.ccw(points[i],points[(i + 1) % n],points[(i + 2) % n]) <= 0) {
      return false;
    }
  }
  return true;
}
