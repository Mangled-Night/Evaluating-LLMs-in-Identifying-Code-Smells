@Override public OpenALSoundSource setAudio(OpenALSound sound){
  boolean isPlaying=isPlaying();
  if (isPlaying) {
    stop();
  }
  reset();
  audio=sound;
  AL10.alSourcei(getSourceId(),AL10.AL_BUFFER,audio.getBufferId());
  OpenALException.checkState("Assigning buffer to source");
  if (isPlaying) {
    play();
  }
  return this;
}
