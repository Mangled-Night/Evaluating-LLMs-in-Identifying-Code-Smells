@IntegrationEnvironment(networkMode=NetworkMode.NONE) public class NetworkModeNoneTest {
  @Test void testNetworkMode(  NetworkSystem network){
    assertThat(network.getMode()).isEqualTo(NetworkMode.NONE);
  }
  @Test void testForLocalPlayer(  NetworkSystem network,  LocalPlayer player){
    assertThat(network.getPlayers()).hasSize(1);
    var client=network.getPlayers().iterator().next();
    assertThat(client.isLocal()).isTrue();
    assertThat(player.isValid()).isTrue();
  }
}
