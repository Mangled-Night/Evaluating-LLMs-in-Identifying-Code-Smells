/** 
 * Return the duration of sleep.
 * @return the duration of sleep.
 */
public static int getSleepDuration(){
  try {
    return Settings.System.getInt(Utils.getApp().getContentResolver(),Settings.System.SCREEN_OFF_TIMEOUT);
  }
 catch (  Settings.SettingNotFoundException e) {
    e.printStackTrace();
    return -123;
  }
}
