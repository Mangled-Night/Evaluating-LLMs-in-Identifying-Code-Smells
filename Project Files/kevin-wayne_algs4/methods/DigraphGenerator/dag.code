/** 
 * Returns a random simple DAG containing  {@code V} vertices and {@code E} edges.Note: it is not uniformly selected at random among all such DAGs.
 * @param V the number of vertices
 * @param E the number of vertices
 * @return a random simple DAG on {@code V} vertices, containing a totalof  {@code E} edges
 * @throws IllegalArgumentException if no such simple DAG exists
 */
public static Digraph dag(int V,int E){
  if (E > (long)V * (V - 1) / 2)   throw new IllegalArgumentException("Too many edges");
  if (E < 0)   throw new IllegalArgumentException("Too few edges");
  Digraph G=new Digraph(V);
  SET<Edge> set=new SET<Edge>();
  int[] vertices=new int[V];
  for (int i=0; i < V; i++)   vertices[i]=i;
  StdRandom.shuffle(vertices);
  while (G.E() < E) {
    int v=StdRandom.uniformInt(V);
    int w=StdRandom.uniformInt(V);
    Edge e=new Edge(v,w);
    if ((v < w) && !set.contains(e)) {
      set.add(e);
      G.addEdge(vertices[v],vertices[w]);
    }
  }
  return G;
}
