/** 
 * Initializes a new alphabet from the given set of characters.
 * @param alpha the set of characters
 */
public Alphabet(String alpha){
  boolean[] unicode=new boolean[Character.MAX_VALUE];
  for (int i=0; i < alpha.length(); i++) {
    char c=alpha.charAt(i);
    if (unicode[c])     throw new IllegalArgumentException("Illegal alphabet: repeated character = '" + c + "'");
    unicode[c]=true;
  }
  alphabet=alpha.toCharArray();
  R=alpha.length();
  inverse=new int[Character.MAX_VALUE];
  for (int i=0; i < inverse.length; i++)   inverse[i]=-1;
  for (int c=0; c < R; c++)   inverse[alphabet[c]]=c;
}
/** 
 * Initializes a new alphabet using characters 0 through R-1.
 * @param radix the number of characters in the alphabet (the radix R)
 */
private Alphabet(int radix){
  this.R=radix;
  alphabet=new char[R];
  inverse=new int[R];
  for (int i=0; i < R; i++)   alphabet[i]=(char)i;
  for (int i=0; i < R; i++)   inverse[i]=i;
}
/** 
 * Initializes a new alphabet using characters 0 through 255.
 */
public Alphabet(){
  this(256);
}
