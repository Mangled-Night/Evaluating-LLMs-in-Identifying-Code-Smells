public String toXML(){
  StringBuilder buf=new StringBuilder();
  buf.append("<item");
  if (getAction() != null) {
    buf.append(" action=\"").append(getAction()).append('"');
  }
  if (getJid() != null) {
    buf.append(" jid=\"").append(getJid()).append('"');
  }
  if (getNode() != null) {
    buf.append(" node=\"").append(getNode()).append('"');
  }
  buf.append("/>");
  return buf.toString();
}
