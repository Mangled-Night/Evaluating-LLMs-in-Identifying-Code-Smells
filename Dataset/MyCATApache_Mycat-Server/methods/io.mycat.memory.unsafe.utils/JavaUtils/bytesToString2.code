public static String bytesToString2(long size){
  long TB=1L << 40;
  long GB=1L << 30;
  long MB=1L << 20;
  long KB=1L << 10;
  long value=0;
  String unit=null;
  if (size >= 2 * TB) {
    value=(size / TB);
    unit="TB";
  }
 else   if (size >= 2 * GB) {
    value=(size / GB);
    unit="GB";
  }
 else   if (size >= 2 * MB) {
    value=(size / MB);
    unit="MB";
  }
 else   if (size >= 2 * KB) {
    value=(size / KB);
    unit="KB";
  }
 else {
    value=size;
    unit="B";
  }
  return value + unit;
}
