@ApiOperation(value="评论列表") @RequiresPermissions("cms:tag:read") @RequestMapping(value="/list",method=RequestMethod.GET) @ResponseBody public Object list(@RequestParam(required=false,defaultValue="0",value="offset") int offset,@RequestParam(required=false,defaultValue="10",value="limit") int limit,@RequestParam(required=false,value="sort") String sort,@RequestParam(required=false,value="order") String order){
  CmsTagExample cmsTagExample=new CmsTagExample();
  if (!StringUtils.isBlank(sort) && !StringUtils.isBlank(order)) {
    cmsTagExample.setOrderByClause(sort + " " + order);
  }
  List<CmsTag> rows=cmsTagService.selectByExampleForOffsetPage(cmsTagExample,offset,limit);
  long total=cmsTagService.countByExample(cmsTagExample);
  Map<String,Object> result=new HashMap<>(2);
  result.put("rows",rows);
  result.put("total",total);
  return result;
}
