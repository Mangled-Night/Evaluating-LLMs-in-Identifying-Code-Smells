@Command(shortDescription="Set speed multiplier",helpText="Set speedMultiplier",runOnServer=true,requiredPermission=PermissionManager.CHEAT_PERMISSION) public String setSpeedMultiplier(@Sender EntityRef client,@CommandParam("amount") float amount){
  ClientComponent clientComp=client.getComponent(ClientComponent.class);
  CharacterMovementComponent move=clientComp.character.getComponent(CharacterMovementComponent.class);
  if (move != null) {
    float oldSpeedMultipler=move.speedMultiplier;
    move.speedMultiplier=amount;
    clientComp.character.saveComponent(move);
    return "Speed multiplier set to " + amount + " (was "+ oldSpeedMultipler+ ")";
  }
  return "";
}
