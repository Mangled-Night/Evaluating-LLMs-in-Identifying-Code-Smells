@Command(shortDescription="Sets the height the player can step up",runOnServer=true,requiredPermission=PermissionManager.CHEAT_PERMISSION) public String stepHeight(@Sender EntityRef client,@CommandParam("height") float amount){
  ClientComponent clientComp=client.getComponent(ClientComponent.class);
  CharacterMovementComponent move=clientComp.character.getComponent(CharacterMovementComponent.class);
  if (move != null) {
    float prevStepHeight=move.stepHeight;
    move.stepHeight=amount;
    clientComp.character.saveComponent(move);
    return "Ground friction set to " + amount + " (was "+ prevStepHeight+ ")";
  }
  return "";
}
