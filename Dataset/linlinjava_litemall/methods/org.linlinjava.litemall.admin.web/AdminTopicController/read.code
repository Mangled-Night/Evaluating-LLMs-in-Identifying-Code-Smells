@RequiresPermissions("admin:topic:read") @RequiresPermissionsDesc(menu={"推广管理","专题管理"},button="详情") @GetMapping("/read") public Object read(@NotNull Integer id){
  LitemallTopic topic=topicService.findById(id);
  Integer[] goodsIds=topic.getGoods();
  List<LitemallGoods> goodsList=null;
  if (goodsIds == null || goodsIds.length == 0) {
    goodsList=new ArrayList<>();
  }
 else {
    goodsList=goodsService.queryByIds(goodsIds);
  }
  Map<String,Object> data=new HashMap<>(2);
  data.put("topic",topic);
  data.put("goodsList",goodsList);
  return ResponseUtil.ok(data);
}
