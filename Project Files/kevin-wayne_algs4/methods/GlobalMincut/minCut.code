/** 
 * Computes a minimum cut of the edge-weighted graph. Precisely, it computes the lightest of the cuts-of-the-phase which yields the desired minimum cut.
 * @param G the edge-weighted graph
 * @param a the starting vertex
 */
private void minCut(EdgeWeightedGraph G,int a){
  UF uf=new UF(G.V());
  boolean[] marked=new boolean[G.V()];
  cut=new boolean[G.V()];
  CutPhase cp=new CutPhase(0.0,a,a);
  for (int v=G.V(); v > 1; v--) {
    minCutPhase(G,marked,cp);
    if (cp.weight < weight) {
      weight=cp.weight;
      makeCut(cp.t,uf);
    }
    G=contractEdge(G,cp.s,cp.t);
    marked[cp.t]=true;
    uf.union(cp.s,cp.t);
  }
}
