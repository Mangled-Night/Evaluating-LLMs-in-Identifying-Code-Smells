/** 
 * Plots bars from (0, <em>a</em><sub><em>i</em></sub>) to (<em>a</em><sub><em>i</em></sub>) for each <em>i</em> to standard draw.
 * @param a the array of values
 */
public static void plotBars(double[] a){
  validateNotNull(a);
  int n=a.length;
  StdDraw.setXscale(-1,n);
  for (int i=0; i < n; i++) {
    StdDraw.filledRectangle(i,a[i] / 2,0.25,a[i] / 2);
  }
}
