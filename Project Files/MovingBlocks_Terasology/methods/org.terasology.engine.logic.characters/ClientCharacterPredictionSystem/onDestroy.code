@ReceiveEvent(components={CharacterComponent.class,CharacterMovementComponent.class,LocationComponent.class,AliveCharacterComponent.class}) public void onDestroy(final BeforeDeactivateComponent event,final EntityRef entity){
  CharacterComponent character=entity.getComponent(CharacterComponent.class);
  ClientComponent controller=character.controller.getComponent(ClientComponent.class);
  if (controller != null && controller.local) {
    predictedState=null;
    authoritiveState=null;
    inputs.clear();
  }
  physics.removeCharacterCollider(entity);
  playerStates.remove(entity);
}
