@Test public void setMessageThreadTest() throws IOException, SAXException {
  final String messageThread="1234";
  StringBuilder controlBuilder=new StringBuilder();
  controlBuilder.append("<message>").append("<thread>").append(messageThread).append("</thread>").append("</message>");
  String control=controlBuilder.toString();
  Message message=StanzaBuilder.buildMessage().setThread(messageThread).build();
  assertEquals(messageThread,message.getThread());
  assertXmlSimilar(control,message.toXML(StreamOpen.CLIENT_NAMESPACE).toString());
}
