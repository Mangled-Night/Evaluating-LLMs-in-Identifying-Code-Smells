public static final void writeLength(ByteBuffer buffer,long l){
  if (l < 0) {
    buffer.put((byte)254);
    writeLong(buffer,l);
  }
 else   if (l < 251) {
    buffer.put((byte)l);
  }
 else   if (l < 0x10000L) {
    buffer.put((byte)252);
    writeUB2(buffer,(int)l);
  }
 else   if (l < 0x1000000L) {
    buffer.put((byte)253);
    writeUB3(buffer,(int)l);
  }
 else {
    buffer.put((byte)254);
    writeLong(buffer,l);
  }
}
