/** 
 * Tests the behavior of the roster if the connection is not authenticated yet.
 * @author Henning Staib
 */
public class RosterOfflineTest {
  private DummyConnection connection;
  private Roster roster;
  @Before public void setup(){
    this.connection=new DummyConnection();
    assertFalse(connection.isConnected());
    roster=Roster.getInstanceFor(connection);
    assertNotNull(roster);
  }
  @Test(expected=SmackException.class) public void shouldThrowExceptionOnReload() throws Exception {
    roster.reload();
  }
  @Test(expected=SmackException.class) public void shouldThrowExceptionRemoveEntry() throws Exception {
    roster.removeEntry(null);
  }
}
