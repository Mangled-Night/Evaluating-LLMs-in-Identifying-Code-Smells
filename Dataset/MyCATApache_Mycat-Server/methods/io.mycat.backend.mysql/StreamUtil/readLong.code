public static final long readLong(InputStream in) throws IOException {
  byte[] b=new byte[8];
  read(in,b,0,b.length);
  long l=(long)(b[0] & 0xff);
  l|=(long)(b[1] & 0xff) << 8;
  l|=(long)(b[2] & 0xff) << 16;
  l|=(long)(b[3] & 0xff) << 24;
  l|=(long)(b[4] & 0xff) << 32;
  l|=(long)(b[5] & 0xff) << 40;
  l|=(long)(b[6] & 0xff) << 48;
  l|=(long)(b[7] & 0xff) << 56;
  return l;
}
