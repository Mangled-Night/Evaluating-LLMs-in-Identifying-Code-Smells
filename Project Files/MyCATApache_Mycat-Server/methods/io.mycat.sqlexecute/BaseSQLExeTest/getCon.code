public static Connection getCon(String url,String user,String passwd) throws SQLException {
  Connection theCon=DriverManager.getConnection(url,user,passwd);
  return theCon;
}
public static Connection getCon(String[] args) throws Exception {
  if (driverLoaded == false) {
    Class.forName("com.mysql.jdbc.Driver");
    driverLoaded=true;
  }
  if (args.length < 3) {
    System.out.println("input param,format: [jdbcurl] [user] [password]   ");
    return null;
  }
  String url=args[0];
  String user=args[1];
  String password=args[2];
  return getCon(url,user,password);
}
