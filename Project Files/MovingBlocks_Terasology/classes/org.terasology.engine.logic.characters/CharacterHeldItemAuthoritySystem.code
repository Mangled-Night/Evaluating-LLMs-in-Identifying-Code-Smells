@RegisterSystem(RegisterMode.AUTHORITY) public class CharacterHeldItemAuthoritySystem extends BaseComponentSystem {
  @ReceiveEvent public void onChangeHeldItemRequest(  ChangeHeldItemRequest event,  EntityRef character,  CharacterHeldItemComponent characterHeldItemComponent){
    characterHeldItemComponent.selectedItem=event.getItem();
    character.saveComponent(characterHeldItemComponent);
  }
}
