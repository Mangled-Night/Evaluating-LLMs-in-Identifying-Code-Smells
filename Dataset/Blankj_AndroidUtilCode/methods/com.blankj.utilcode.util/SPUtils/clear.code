/** 
 * Remove all preferences in sp.
 */
public void clear(){
  clear(false);
}
/** 
 * Remove all preferences in sp.
 * @param isCommit True to use {@link SharedPreferences.Editor#commit()}, false to use  {@link SharedPreferences.Editor#apply()}
 */
public void clear(final boolean isCommit){
  if (isCommit) {
    sp.edit().clear().commit();
  }
 else {
    sp.edit().clear().apply();
  }
}
