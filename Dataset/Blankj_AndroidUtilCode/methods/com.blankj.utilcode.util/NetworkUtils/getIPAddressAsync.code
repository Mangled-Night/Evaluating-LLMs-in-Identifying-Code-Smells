/** 
 * Return the ip address. <p>Must hold  {@code <uses-permission android:name="android.permission.INTERNET" />}</p>
 * @param useIPv4  True to use ipv4, false otherwise.
 * @param consumer The consumer.
 * @return the task
 */
public static Utils.Task<String> getIPAddressAsync(final boolean useIPv4,@NonNull final Utils.Consumer<String> consumer){
  return UtilsBridge.doAsync(new Utils.Task<String>(consumer){
    @RequiresPermission(INTERNET) @Override public String doInBackground(){
      return getIPAddress(useIPv4);
    }
  }
);
}
