private void updateLifeRemaining(final ParticlePool pool,final float delta){
  for (int i=0; i < pool.livingParticles(); i++) {
    pool.energy[i]-=delta;
  }
  for (int i=0; i < pool.livingParticles(); i++) {
    while (pool.energy[i] < 0 && i < pool.livingParticles()) {
      pool.moveDeceasedParticle(i);
    }
  }
}
