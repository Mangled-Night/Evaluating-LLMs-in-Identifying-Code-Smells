/** 
 * Draws a point centered at (<em>x</em>, <em>y</em>). The point is a filled circle whose radius is equal to the pen radius. To draw a single-pixel point, first set the pen radius to 0.
 * @param x the <em>x</em>-coordinate of the point
 * @param y the <em>y</em>-coordinate of the point
 * @throws IllegalArgumentException if either {@code x} or {@code y} is either NaN or infinite
 */
public static void point(double x,double y){
  validate(x,"x");
  validate(y,"y");
  double xs=scaleX(x);
  double ys=scaleY(y);
  double r=penRadius;
  float scaledPenRadius=(float)(r * DEFAULT_SIZE);
  if (scaledPenRadius <= 1)   pixel(x,y);
 else   offscreen.fill(new Ellipse2D.Double(xs - scaledPenRadius / 2,ys - scaledPenRadius / 2,scaledPenRadius,scaledPenRadius));
  draw();
}
