@RequiresPermissions("admin:comment:delete") @RequiresPermissionsDesc(menu={"商品管理","评论管理"},button="删除") @PostMapping("/delete") public Object delete(@RequestBody LitemallComment comment){
  Integer id=comment.getId();
  if (id == null) {
    return ResponseUtil.badArgument();
  }
  commentService.deleteById(id);
  return ResponseUtil.ok();
}
