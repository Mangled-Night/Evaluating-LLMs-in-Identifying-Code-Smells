public boolean onKeyEvent(NUIKeyEvent event){
  if (event.isDown()) {
    if (event.getKey() == Keyboard.Key.ESCAPE) {
      if (isEscapeToCloseAllowed()) {
        triggerBackAnimation();
        return true;
      }
    }
 else     if (event.getKey() == Keyboard.Key.R) {
      refresh();
    }
  }
  return false;
}
