/** 
 * 获取打折优惠的促销信息
 */
private String getLadderPromotionMessage(PmsProductLadder ladder){
  StringBuilder sb=new StringBuilder();
  sb.append("打折优惠：");
  sb.append("满");
  sb.append(ladder.getCount());
  sb.append("件，");
  sb.append("打");
  sb.append(ladder.getDiscount().multiply(new BigDecimal(10)));
  sb.append("折");
  return sb.toString();
}
