@ApiOperation(value="用户权限") @RequiresPermissions("upms:user:permission") @RequestMapping(value="/permission/{id}",method=RequestMethod.GET) public String permission(@PathVariable("id") int id,ModelMap modelMap){
  UpmsUser user=upmsUserService.selectByPrimaryKey(id);
  modelMap.put("user",user);
  return "/manage/user/permission.jsp";
}
@ApiOperation(value="用户权限") @RequiresPermissions("upms:user:permission") @RequestMapping(value="/permission/{id}",method=RequestMethod.POST) @ResponseBody public Object permission(@PathVariable("id") int id,HttpServletRequest request){
  JSONArray datas=JSONArray.parseArray(request.getParameter("datas"));
  upmsUserPermissionService.permission(datas,id);
  return new UpmsResult(UpmsResultConstant.SUCCESS,datas.size());
}
