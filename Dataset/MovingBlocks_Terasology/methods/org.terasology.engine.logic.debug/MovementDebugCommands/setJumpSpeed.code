@Command(shortDescription="Set jump speed",runOnServer=true,requiredPermission=PermissionManager.CHEAT_PERMISSION) public String setJumpSpeed(@Sender EntityRef client,@CommandParam("amount") float amount){
  ClientComponent clientComp=client.getComponent(ClientComponent.class);
  CharacterMovementComponent move=clientComp.character.getComponent(CharacterMovementComponent.class);
  if (move != null) {
    float oldSpeed=move.jumpSpeed;
    move.jumpSpeed=amount;
    clientComp.character.saveComponent(move);
    return "Jump speed set to " + amount + " (was "+ oldSpeed+ ")";
  }
  return "";
}
